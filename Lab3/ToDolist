      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }

    .todo-app {
      background: white;
      padding: 20px;
      border-radius: 10px;
      width: 400px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      color: #333;
    }

    .input-container {
      display: flex;
      margin-bottom: 20px;
    }

    #new-task-input {
      flex-grow: 1;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
    }

    #add-task-btn {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin-left: 10px;
    }

    #add-task-btn:hover {
      background-color: #0056b3;
    }

    ul {
      list-style: none;
    }

    .task-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
